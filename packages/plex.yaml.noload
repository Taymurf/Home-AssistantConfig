################################################################
## Packages / Media Players
################################################################




media_player:
  - platform: plex
    entity_namespace: 'plex'
    use_custom_entity_ids: true
    use_episode_art: true
    scan_interval: 1


automation:
  - alias: 'plex_lights_off'
    initial_state: 'on'
    trigger:
      - platform: state
        entity_id: media_player.plex_family_room
        to: 'playing'
    condition: 
      condition: time
      after: '20:00:00'
    action:
      - service: scene.turn_on
        entity_id: scene.plex_play

  - alias: 'plex_lights_on'
    initial_state: 'on'
    trigger:
      - platform: state
        entity_id: media_player.plex_family_room
        to: 'paused'
    condition: 
      condition: time
      after: '20:00:00'
    action:
      - service: scene.turn_on
        entity_id: scene.plex_pause