


group:
  stock_prices:
    name: Stock Prices
    icon: mdi:currency-usd
    entities:
      - sensor.bitcoin
      - sensor.sp_500
      - sensor.dow_jones
      - sensor.nasdaq


sensor:
  - platform: alpha_vantage
    api_key: !secret av_api
    symbols:
      - name: S&P 500
        currency: USD
        symbol: INX
      - name: Dow Jones
        currency: USD
        symbol: DJI
      - name: Nasdaq
        currency: USD
        symbol: IXIC
      # - name: Vanguard Fund
      #   currency: USD
      #   symbol: VTSAX
    foreign_exchange:
      - from: BTC
        to: USD
        name: Bitcoin